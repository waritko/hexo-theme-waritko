<% if (page.total > 1) { %>
    <div class="my-pagination align-self-center">
        <% if (page.prev){ %>
            <a href="<%- config.root %><%- page.prev_link %>" class="btn btn-info">Previous</a>
        <% } %>
        <span class="page-number">Page <b><%- page.current %></b> of <b><%- page.total %></b></span>
        <% if (page.next){ %>
            <a href="<%- config.root %><%- page.next_link %>" class="btn btn-info">Next</a>
        <% } %>
    </div>
<% } %>
